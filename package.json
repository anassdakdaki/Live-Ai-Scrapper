{
  "name": "scraper-ai",
  "private": true,
  "version": "0.1.0",
  "description": "Scraper AI â€“ deterministic-first web scraping platform with optional AI augmentation.",
  "license": "MIT",
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "next dev --turbo --hostname 0.0.0.0 --port 3000 -w apps/web",
    "dev:node": "node services/node/dist/index.js",
    "dev:python": "uvicorn main:app --reload --host 0.0.0.0 --port 8001 --app-dir services/python",
    "lint": "biome check .",
    "fmt": "biome format .",
    "typecheck": "pnpm -C apps/web typecheck || npm -C apps/web run typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "husky": "^9.0.0"
  }
}
